{
	"name": "PL_INGESTION_PIPELINE",
	"properties": {
		"activities": [
			{
				"name": "configFile",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"dataset": {
						"referenceName": "DS_AZBS_CONFIG",
						"type": "DatasetReference"
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "readEndpoints",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "configFile",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('configFile').output.value",
						"type": "Expression"
					},
					"activities": [
						{
							"name": "extractEndpoint",
							"type": "Copy",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"source": {
									"type": "RestSource",
									"httpRequestTimeout": "00:01:40",
									"requestInterval": "00.00:00:00.010",
									"requestMethod": "GET",
									"paginationRules": {
										"supportRFC5988": "true"
									}
								},
								"sink": {
									"type": "JsonSink",
									"storeSettings": {
										"type": "AzureBlobStorageWriteSettings"
									},
									"formatSettings": {
										"type": "JsonWriteSettings"
									}
								},
								"enableStaging": false
							},
							"inputs": [
								{
									"referenceName": "DS_REST_MBTA_API",
									"type": "DatasetReference",
									"parameters": {
										"dynamicUrl": {
											"value": "@item().endpoint",
											"type": "Expression"
										}
									}
								}
							],
							"outputs": [
								{
									"referenceName": "DS_AZBS_LANDING",
									"type": "DatasetReference",
									"parameters": {
										"endpointFolder": {
											"value": "@item().entityName",
											"type": "Expression"
										},
										"yearFolder": {
											"value": "@formatDateTime(utcNow(), 'yyyy')",
											"type": "Expression"
										},
										"monthFolder": {
											"value": "@formatDateTime(utcNow(), 'MM')",
											"type": "Expression"
										},
										"dayFolder": {
											"value": "@formatDateTime(utcNow(), 'dd')",
											"type": "Expression"
										},
										"fileName": {
											"value": "@concat(\n    item().entityName,\n    '_',\n    formatDateTime(utcNow(), 'yyyyMMddHHmmss')\n)",
											"type": "Expression"
										}
									}
								}
							]
						}
					]
				}
			}
		],
		"annotations": []
	}
}